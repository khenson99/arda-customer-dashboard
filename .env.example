# Arda API Configuration
# Get your API key from the Arda dashboard
VITE_ARDA_API_KEY=your_api_key_here
VITE_ARDA_AUTHOR=kyle@arda.cards

# Coda Integration (for account overrides and persistence)
VITE_CODA_API_TOKEN=your_coda_token_here
CODA_API_TOKEN=your_coda_token_here
CODA_DOC_ID=0cEU3RTNX6

# Server-side Arda API (for Vercel serverless functions)
ARDA_API_KEY=your_api_key_here
ARDA_AUTHOR=dashboard@arda.cards

# Optional: API URL for development (defaults to localhost:3000)
# VITE_API_URL=http://localhost:3000

# Stripe Integration (for commercial metrics - ARR, MRR, payment status)
# Get your secret key from https://dashboard.stripe.com/apikeys
# Note: Rate limited to 100 requests/second
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Supabase Integration (for data persistence - replaces localStorage)
# Get your project URL and anon key from https://supabase.com/dashboard
# If not configured, the app falls back to localStorage
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-anon-key
